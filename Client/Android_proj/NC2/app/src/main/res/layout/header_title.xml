<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ly_topbar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/top_bar_two_button"
    android:layout_gravity="center_vertical"
    android:background="@color/header"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/id_ly_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/id_btn_left"
            android:layout_width="@dimen/left_btn_width"
            android:layout_height="@dimen/left_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_left2"
            android:layout_width="@dimen/left_btn_width"
            android:layout_height="@dimen/left_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_left3"
            android:layout_width="@dimen/left_btn_width"
            android:layout_height="@dimen/left_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_left4"
            android:layout_width="@dimen/left_btn_width"
            android:layout_height="@dimen/left_btn_height"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ly_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/id_tv_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/id_tv_title_sub"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/subtitle_size" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/id_ly_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/id_btn_right4"
            android:layout_width="@dimen/right_btn_width"
            android:layout_height="@dimen/right_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <Button
            android:id="@+id/id_btn_right3"
            android:layout_width="@dimen/right_btn_width"
            android:layout_height="@dimen/right_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_right2"
            android:layout_width="@dimen/right_btn_width"
            android:layout_height="@dimen/right_btn_height"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/id_btn_right"
            android:layout_width="@dimen/right_btn_width"
            android:layout_height="@dimen/right_btn_height"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>